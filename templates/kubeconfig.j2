# Kubernetes Configuration Template
# Copy this file to ~/.kube/config and update with your cluster details

apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: LS0tLS1CRUdJTi... # Base64 encoded CA certificate
    server: https://your-k8s-cluster:6443
  name: your-cluster-name
contexts:
- context:
    cluster: your-cluster-name
    user: your-user
  name: your-context
current-context: your-context
kind: Config
preferences: {}
users:
- name: your-user
  user:
    client-certificate-data: LS0tLS1CRUdJTi... # Base64 encoded client certificate
    client-key-data: LS0tLS1CRUdJTi... # Base64 encoded client key
